<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_controll"
        tools:context=".ControllActivity">

    <Button
            android:text="Right"
            android:layout_width="114dp"
            android:layout_height="70dp"
            android:id="@+id/buttonRight"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/buttonDown"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="Left"
            android:layout_width="114dp"
            android:layout_height="70dp"
            android:id="@+id/buttonLeft"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonDown"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Up"
            android:layout_width="114dp"
            android:layout_height="70dp"
            android:id="@+id/buttonUp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonDown"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <Button
            android:text="Down"
            android:layout_width="114dp"
            android:layout_height="70dp"
            android:id="@+id/buttonDown"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>