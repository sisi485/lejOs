<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity">



    <!--Display whether bluetooth is available or not-->
    <TextView
            android:id="@+id/statusBluetoothTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="#000" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <!--Bluetooth icon (on/off)-->
    <ImageView
            android:id="@+id/bluetoothIv"
            android:layout_width="100dp"
            android:layout_height="100dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/discoverableBtn" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <!--On Button-->
    <Button
            android:id="@+id/onBtn"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn On"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pairedBtn" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!--Off btn-->
    <Button
            android:id="@+id/offBtn"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Turn Off"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/onBtn" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!--Discoverable button-->
    <Button
            android:id="@+id/discoverBtn"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/offBtn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <!--Get list of paired devices button-->
    <Button
            android:id="@+id/discoverBtn2"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/offBtn" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:id="@+id/pairedBtn"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Paired Devices"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/pairedTv" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <!--Show paired devices here-->
    <TextView
            android:id="@+id/pairedTv"
            android:minWidth="200dp"
            android:text=""
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/statusBluetoothTv" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>

    <Button
            android:id="@+id/connectBtn"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/discoverBtn2"/>
    <Button
            android:id="@+id/controllBtn"
            android:minWidth="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Controll"
            style="@style/Base.Widget.AppCompat.Button.Colored"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/connectBtn"/>


</android.support.constraint.ConstraintLayout>